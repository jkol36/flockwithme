html(lang="en")
head
	link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
	link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
	meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0')
	meta(ame='author', content='flockwithme')
	title
	script(type='text/javascript', src='http://code.jquery.com/jquery-1.11.0.min.js')
	script(type='text/javascript', src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
	script(src="{% static 'django_ajax/js/jquery.ajax.min.js' %}", type="text/javascript")
	link(rel='stylesheet', href="{% static 'css/animate.css' %}")
	link(rel='stylesheet', href="{% static 'css/simple-line-icons.css' %}")
	link(rel='stylesheet', href="{% static 'css/style.css' %}")

body
	#preloader
		.clock
			.arrow_sec
			.arrow_min
	#wrap
		header#header
			.container
				a.logo(href='#')
					img(src="{% static 'img/flockwithme.png' %}", alt="Best start for your business", heigth='40', width='45')
				a.login_btn(href='#login-modal', data-toggle='modal') Login
				ul.soc_nav
					li
						a.icon-social-facebook(href='http://facebook.com/flockwme')
					li
						a.icon-social-twitter(href='http://twitter.com/realflockwithme')
		section#intro
			- include "display_messages.jade"
			.container
				.row
					.col-lg-6.col-md-6.col-sm-6
						.slogan
							h2.wow.fadeInRight(data-wow-delay='0.6s', data-wow-duration='0.5s') A product that people can't find...
							h3.wow.fadeInLeft(data-wow-delay='0.9s', data-wow-duration='0.5s') Might as well not exist in the first place.
							p.wow.fadeInRight(data-wow-delay='1.2s')
					.col-lg-4.col-lg-offset-2.col-md-5.col-sm-6
						form#register_form(role='form', method='POST', action="{% url 'landingpage' %}")
							- csrf_token
							.title.wow.flipInX(data-wow-duration='0.6s') Get Discovered!
							.form-group
								input.form-control.wow.flipInX#name(data-wow-delay='0.8s', data-wow-duration='0.2s', placeholder='Full name', name='name')
							.form-group
								input#email.form-control.wow.flipInX(type='email', data-wow-delay='1s', data-wow-duration='0.2s', placeholder='Email Address', name='email')
							.form-group
								input#username.form-control.wow.flipInX(type='text', data-wow-delay='1.2s', data-wow-duration='0.2s', placeholder='Username', name='username')
							.form-group
								input#password.form-control.wow.flipInX(type='password', data-wow-delay='1.4s', data-wow-duration='0.2s', placeholder='Password', name='password1')
							.form-group
								input#betakey.form-control.wow.flipInX(type='text', data-wow-delay='1.4s', data-wow-duration='0.2s', placeholder='Betakey', name='betakey')
							button#signup.btn.btn_start.wow.flipInX(type='submit', data-wow-delay='1.6s', data-wow-duration='0.2s') Join the Flock
			#slides(data-stellar-ratio='0.4')
				.slides-container
					img(src="{% static 'img/1.jpg' %}", alt='')
					img(src="{% static 'img/2.jpg' %}", alt='')
					img(src="{% static 'img/3.jpg' %}", alt='')

		section#services
			.container
				.row
					.col-md-6.service
						i.fa.fa-users
						h4 Multiple Accounts
						p Add up to 100 twitter accounts - schedule tasks once and watch them grow over time.
					.col-md-6.service
						i.fa.fa-envelope
						h4 Auto Dm
						p Automatically send a direct message to the people who follow you. 
					.col-md-6.service
						i.fa.fa-user
						h4 Follow the followers of a specific twitter account
						p Identify your competition, put in the @handle of their twitter account, and follow the accounts followers.
					.col-md-6.service
						i.fa.fa-location-arrow
						h4 Location based following
						p Target users who only live in a certain geographical area 
		section#contact
			.container
				.row
					.col-md-4
						h4 Contact us
						ul.contact_data_list
							li
								i.icon-call-in
								| 267-901-3864
							li
								i.icon-pointer
								| 3240 Market Street, Philadelphia PA, United States
							li
								i.icon-envelope
								| hello@flockwith.me
					.col-md-5
						h4 Subscribe
						form#subscribe_form(action="{% url 'subscribe' %}", method='post')
							.input-group
								input#subscribe_email.form-control(type='email', name='email', placeholder='Enter your email here')
								.input-group-btn
									button#subscribe_submit.btn(type='submit')
										i.icon-envelope
						p Subscribe to our newsletter, actions and updates
					.col-md-3
						h4 Follow us
						ul.soc_nav
							li
								a.icon-social-facebook(href='http://facebook.com/flockwme')
							li
								a.icon-social-twitter(href='http://twitter.com/realflockwithme')

		footer#footer
			.container
				a.logo(href='#')
					img(src="{% static 'img/flockwithme_logo.png' %}", alt='Best start for your business', height='40')
				p
					| Â© Flockwithme LLC
				br
					span Made with love by
						a(href='http://twitter.com/jkol36') @jkol36 
						| and 
						a(href='http://twitter.com/martolini') @martolini
.modal#login-modal
	.modal-dialog
		.modal-content
			.modal-header
				p Log in to flockwithme
			.modal-body
				form(role='form', method='POST', action="{% url 'login' %}")
					- csrf_token
					.form-group
						.input-group
							span.input-group-addon
								i.fa.fa-user.fa-fw
							input.form-control(name='username', type='text', placeholder='username')
					.form-group
						.input-group
							span.input-group-addon
								i.fa.fa-lock.fa-fw
							input.form-control(name='password', type='password', placeholder='password')
					.form-group.text-center
						button.btn.btn-primary.btn-lg START

