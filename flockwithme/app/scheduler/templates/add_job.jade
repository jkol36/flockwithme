mixin panel(title, form_name, description)
	.row
		.col-md-12
			.panel.panel-default.content
				.panel-body
					p.lead.content-header(style="text-align:center;")
						i.fa.fa-twitter.fa-fw
						| &nbsp; {{title}}
					p.text-muted(style="text-align:center;")
						| {{description}}
						a(href="#", style="padding-left:3px;") Here.
					form(role="form", action="{% url 'add_job' %}", method="POST")
						input(type="hidden", name='{{form_name}}')
					button.btn.btn.btn-info.btn-lg.form-submit(value="submit", style="margin-left:40%;", type="submit") Select This One



-block content
.container-fluid
	+panel("Put Your Social Media Account On Auto-Pilot.", 'auto_pilot', "Flock will take care of everything for you. Learn More")
	p.text-primary(style="text-align:center;") or
	+panel("Only start actions when an event happens.", 'on_event', " You control when Flock runs. Learn More")
	


-endblock content
